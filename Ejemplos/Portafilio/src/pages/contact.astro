---
import Layout from "../layouts/Layout.astro";
---
<Layout>
  <section class="max-w-2xl h-screen mx-auto">
    <h1 class="text-3xl font-bold mb-4">Contacto</h1>
    <form class="space-y-4">
      <div>
        <label for="name" class="block mb-1">Nombre:</label>
        <input type="text" id="name" name="name" class="w-full border p-2 rounded">
      </div>
      <div>
        <label for="email" class="block mb-1">Email:</label>
        <input type="email" id="email" name="email" class="w-full border p-2 rounded">
      </div>
      <div>
        <label for="message" class="block mb-1">Mensaje:</label>
        <textarea id="message" name="message" rows="4" class="w-full border p-2 rounded"></textarea>
      </div>
      <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Enviar</button>
    </form>
  </section>
</Layout>
